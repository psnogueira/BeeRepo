@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<div class="container-fluid vh-100">
    <div class="row">
        <div class="col-sm-6 col-md-7 intro-section">
            <div class="gradient-overlay"></div>
            <div class="brand-wrapper top-bee">
                <a class="btn-logo-bee-login" asp-controller="Home" asp-action="Index"><i class="bi bi-android"></i> Bee</a>
            </div>
            <div class="intro-content-wrapper top-bee">
                <h1 class="intro-title">Seja bem-vindo!</h1>
                <p class="intro-text">
                    Este é um projeto de Análise de Dados para a <u>Sanofi</u><span>&#8482;</span>
                </p>
            </div>
        </div>

        <div class="col-sm-6 col-md-5 form-section top-bee">
            <div class="login-wrapper card  border-3 p-4" style="border-radius: 1rem;">
                <h2 class="login-title">Login</h2>
                <section>
                    <form id="account" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                        <div class="form-floating mb-4">
                            <input asp-for="Input.Email" class="form-control rounded" autocomplete="username" aria-required="true" placeholder="" />
                            <label asp-for="Input.Email" class="form-label text-secondary">Email</label>
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>

                        <div class="input-group mb-4">
                            <div class="form-floating">
                                <input asp-for="Input.Password" class="form-control mb-0 rounded" id="floatingPassword" autocomplete="current-password" aria-required="true" placeholder="" />
                                <label asp-for="Input.Password" class="form-label text-secondary">Senha</label>
                                <span asp-validation-for="Input.Password" class="text-danger"></span>
                            </div>
                            <span class="input-group-text btn btn-bee-login d-flex align-items-center" id="togglePassword">
                                <i class="bi bi-eye" id="eyeIcon"></i>
                            </span>
                        </div>

                        <div class="checkbox mb-2">
                            <label asp-for="Input.RememberMe" class="form-label">
                                <input class="form-check-input" asp-for="Input.RememberMe" />
                                Lembre de mim
                                @* @Html.DisplayNameFor(m => m.Input.RememberMe) *@
                            </label>
                        </div>
                        <div>
                            <button id="login-submit" type="submit" class="fw-bold w-100 btn btn-lg btn-bee-login mt-4">Entrar</button>
                        </div>
                    </form>
                </section>
                <div class="d-flex mb-2 mt-3">
                    <a class="text-center w-100 text-bee-darkblue" id="forgot-password" asp-page="./ForgotPassword">Esqueceu sua senha?</a>
                    @* <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a> *@
                    @* <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a> *@
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(() => {
            $('#togglePassword').click(() => {
                const input = $('#floatingPassword');
                const icon = $('#eyeIcon');
                if (input.attr('type') === 'password') {
                    input.attr('type', 'text');
                    icon.removeClass('bi-eye').addClass('bi-eye-slash');
                } else {
                    input.attr('type', 'password');
                    icon.removeClass('bi-eye-slash').addClass('bi-eye');
                }
            });
        });
    </script>
}
