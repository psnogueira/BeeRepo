@model Bee.Models.Expense

@{
    ViewData["Title"] = "Criar";
}

<div class="d-flex justify-content-between align-items-center position-relative">
    <div class="col-md-5 d-flex flex-column justify-content-evenly ">
        <a class="top-0 mt-2 start-0 d-flex align-items-center gap-1 text-bee-purple fs-5 text-decoration-none" asp-action="Index">
            <i class="bi bi-arrow-left-short fs-3"></i>Voltar
        </a>
        <h1 class="mb-3 text-bee-purple fw-bold">Criar nova despesa</h1>
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating mb-3">
                <input asp-for="SupplierId" class="form-control" placeholder="Título" />
                <label asp-for="SupplierId" class="form-label text-secondary"></label>
                <span asp-validation-for="SupplierId" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="ExpenseTypeId" class="form-control" placeholder="Descrição" />
                <label asp-for="ExpenseTypeId" class="form-label text-secondary"></label>
                <span asp-validation-for="ExpenseTypeId" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Value" class="form-control" placeholder="Descrição" />
                <label asp-for="Value" class="form-label text-secondary"></label>
                <span asp-validation-for="Value" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Criar" class="btn btn-bee-crud btn-lg w-100 fw-bold" />
            </div>
        </form>
    </div>

    <div class="col-md-6">
        <img class=" w-100" src="~/img/artSq.jpg" alt="Arte decorativa" />
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
