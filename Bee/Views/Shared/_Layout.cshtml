<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Bee</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/bootstrap.custom.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/Bee.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-bee-dark border-bottom rounded-lg rounded-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand btn-bee-logo" asp-area="" asp-controller="Home" asp-action="Index"><i class="bi bi-android"></i> Bee</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1" id="pills-tab" role="tablist">
                        <li class="nav-item">
                            <a class="nav-link btn-bee-navbar" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-light btn-bee-navbar" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Gestão e Controles
                            </a>
                            <ul class="dropdown-menu">
                                <a class="nav-link btn-bee-navbar-dark" asp-area="" asp-controller="Franchises" asp-action="Index">Franquias</a>
                                <a class="nav-link btn-bee-navbar-dark" asp-area="" asp-controller="HACATs" asp-action="Index">Códigos HACAT</a>
                                <a class="nav-link btn-bee-navbar-dark" asp-area="" asp-controller="Suppliers" asp-action="Index">Fornecedores</a>
                                <a class="nav-link btn-bee-navbar-dark" asp-area="" asp-controller="Companies" asp-action="Index">Empresas</a>
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-light btn-bee-navbar" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Eventos & Despesas
                            </a>
                            <ul class="dropdown-menu">
                                <a class="nav-link btn-bee-navbar-dark" asp-area="" asp-controller="EventTypes" asp-action="Index">Tipos de Evento</a>
                                <a class="nav-link btn-bee-navbar-dark" asp-area="" asp-controller="ExpenseTypes" asp-action="Index">Tipos de Despesas</a>
                                <a class="nav-link btn-bee-navbar-dark" asp-area="" asp-controller="Events" asp-action="Index">Eventos</a>
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-light btn-bee-navbar" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Relatórios
                            </a>
                            <ul class="dropdown-menu">
                                <a class="nav-link btn-bee-navbar-dark" asp-area="" asp-controller="Reports" asp-action="PowerBIReport"><i class="bi bi-file-earmark-bar-graph"></i> Power BI</a>
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-light btn-bee-navbar" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Painel Admin
                            </a>
                            <ul class="dropdown-menu">
                                <a class="nav-link btn-bee-navbar-dark" asp-area="" asp-controller="Roles" asp-action="Index">Níveis de Acesso</a>
                                <a class="nav-link btn-bee-navbar-dark" asp-area="" asp-controller="Departments" asp-action="Index">Departamentos</a>
                                <a class="nav-link btn-bee-navbar-dark" asp-area="" asp-controller="Users" asp-action="Index">Funcionários</a>
                            </ul>
                        </li>
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer bg-bee-dark text-light">
        <div class="container">
            &copy; 2024 - Bee - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
